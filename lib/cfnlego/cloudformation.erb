CloudFormation do 
  Description "<%= @description %>"
<%- @resources.each do |r| -%>
  <%="Resource \"#{r.name}\" do" %>
    <%="Type \"#{r.type}\"" %>
    <%- attrs = r.attributes -%>
    <%- if attrs
          attrs.keys.each do |attr| -%>
    <%- attrs[attr].keys.each do |name| -%> 
    <%="#{attr} \"#{name}\", #{attrs[attr][name]}" %>
    <%- end -%>
  <%- end-%>
  <%- end -%>
  <%- ps = r.properties -%>
  <%- ps.keys.each do |p| -%>
    <%="Property \"#{p}\", #{ps[p]}" %>
  <%- end -%>
  end
<% end -%>
end
